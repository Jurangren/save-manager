<UserControl x:Class="SaveManager.Views.SaveManagerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
    </UserControl.Resources>
    
    <StackPanel Margin="20">
        <TextBlock Text="{DynamicResource LOCSaveManagerSettingsTitle}" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <CheckBox Content="{DynamicResource LOCSaveManagerAutoBackup}" 
                  IsChecked="{Binding AutoBackupOnGameExit}" 
                  Margin="0,10,0,0"/>
        
        <CheckBox Content="{DynamicResource LOCSaveManagerRealtimeSync}" 
                  IsChecked="{Binding RealtimeSyncEnabled}" 
                  ToolTip="{DynamicResource LOCSaveManagerRealtimeSyncTooltip}"
                  Margin="0,10,0,0"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="{DynamicResource LOCSaveManagerMaxAutoBackupCount}" VerticalAlignment="Center"/>
            <TextBox Text="{Binding MaxAutoBackupCount}" Width="60" Margin="10,0" 
                     ToolTip="{DynamicResource LOCSaveManagerMaxAutoBackupCountTooltip}"/>
            <TextBlock Text="{DynamicResource LOCSaveManagerMaxAutoBackupCountHint}" VerticalAlignment="Center" Opacity="0.6"/>
        </StackPanel>
        
        <TextBlock Text="{DynamicResource LOCSaveManagerZipWarning}" 
                   Opacity="0.6" Margin="0,30,0,0" FontStyle="Italic"/>
        
        <!-- åˆ†éš”çº¿ -->
        <Separator Margin="0,30,0,15" Background="{DynamicResource NormalBorderBrush}"/>
        
        <!-- æ•°æ®ç®¡ç†åŒºåŸŸ -->
        <TextBlock Text="{DynamicResource LOCSaveManagerDataManagement}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <Button Command="{Binding GlobalExportCommand}" 
                    ToolTip="{DynamicResource LOCSaveManagerGlobalExportTooltip}"
                    Padding="10,6" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¤" Margin="0,0,6,0"/>
                    <TextBlock Text="{DynamicResource LOCSaveManagerGlobalExport}"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding GlobalImportCommand}" 
                    ToolTip="{DynamicResource LOCSaveManagerGlobalImportTooltip}"
                    Padding="10,6" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¥" Margin="0,0,6,0"/>
                    <TextBlock Text="{DynamicResource LOCSaveManagerGlobalImport}"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding OpenDataFolderCommand}" 
                    ToolTip="{DynamicResource LOCSaveManagerOpenDataFolderTooltip}"
                    Padding="10,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“" Margin="0,0,6,0"/>
                    <TextBlock Text="{DynamicResource LOCSaveManagerOpenDataFolder}"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!-- è·¨è®¾å¤‡ç®¡ç†åŒºåŸŸ -->
        <Separator Margin="0,20,0,15" Background="{DynamicResource NormalBorderBrush}"/>
        
        <TextBlock Text="{DynamicResource LOCSaveManagerCrossDeviceManagement}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <Button Command="{Binding OpenGameMatchingCommand}" 
                    ToolTip="{DynamicResource LOCSaveManagerGameMatchingTooltip}"
                    Padding="10,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”—" Margin="0,0,6,0"/>
                    <TextBlock Text="{DynamicResource LOCSaveManagerGameMatching}"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!-- å±é™©åŒºåŸŸ -->
        <Separator Margin="0,30,0,15" Background="{DynamicResource NormalBorderBrush}"/>
        
        <TextBlock Text="{DynamicResource LOCSaveManagerDangerZone}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#CC0000"/>
        
        <Button Command="{Binding DeleteAllDataCommand}" 
                Background="#CC0000" Foreground="White"
                BorderBrush="#AA0000"
                Padding="10,6"
                ToolTip="{DynamicResource LOCSaveManagerDeleteAllDataTooltip}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš ï¸" Margin="0,0,6,0"/>
