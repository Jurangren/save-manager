<UserControl x:Class="SaveManager.Views.SaveManagerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
    </UserControl.Resources>
    
    <StackPanel Margin="20">
        <TextBlock Text="Save Manager 设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="自定义备份目录:" VerticalAlignment="Center" Width="120"/>
            <TextBox Text="{Binding CustomBackupPath}" Width="300" Margin="10,0"/>
            <Button Content="浏览..." Command="{Binding BrowseBackupPathCommand}" Padding="10,4"/>
        </StackPanel>
        
        <CheckBox Content="游戏结束时自动备份" 
                  IsChecked="{Binding AutoBackupOnGameExit}" 
                  Margin="0,10,0,0"/>
        
        <CheckBox Content="备份前显示确认对话框" 
                  IsChecked="{Binding ConfirmBeforeBackup}" 
                  Margin="0,10,0,0"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="最大备份数量:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding MaxBackupCount}" Width="60" Margin="10,0" 
                     ToolTip="每个游戏的最大备份数量，0 表示不限制"/>
            <TextBlock Text="(每个游戏，0=不限制)" VerticalAlignment="Center" Opacity="0.6"/>
        </StackPanel>
        
        <TextBlock Text="提示：存档备份将保存为标准ZIP压缩包格式。" 
                   Opacity="0.6" Margin="0,30,0,0" FontStyle="Italic"/>
    </StackPanel>
</UserControl>
