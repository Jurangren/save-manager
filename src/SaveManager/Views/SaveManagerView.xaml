                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="Opacity" Value="0.7"/>
                                                        <Setter Property="ToolTip" Value="{Binding Path}"/>
                                                        <Style.Triggers>
