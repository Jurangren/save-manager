            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- æ ‡é¢˜æ  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="20" FontWeight="Bold">
                <Run Text="ðŸŽ® "/>
