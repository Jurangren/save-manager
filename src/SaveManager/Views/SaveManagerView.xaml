                                                                               HorizontalAlignment="Center" 
                                                                               VerticalAlignment="Center"
                                                                               Foreground="#FF6B6B"
                                                                               FontSize="11"
                                                                               Margin="10"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.Style>
                                    </ListBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- é…ç½®æŒ‰é’® -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Command="{Binding ImportConfigCommand}" Margin="0,0,10,0" ToolTip="{DynamicResource LOCSaveManagerImportConfigTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¥" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerImportConfig}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportConfigCommand}" ToolTip="{DynamicResource LOCSaveManagerExportConfigTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¤" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerExportConfig}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- å³ä¾§ï¼šå¤‡ä»½ç®¡ç† -->
            <Border Grid.Column="2" Style="{StaticResource SectionBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderText}" Text="{DynamicResource LOCSaveManagerBackupManagementTitle}"/>
                    
                    <!-- æ“ä½œæŒ‰é’®ï¼ˆç§»åˆ°é¡¶éƒ¨ï¼Œç±»ä¼¼å·¦è¾¹çš„å¸ƒå±€ï¼‰ -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Command="{Binding ImportBackupCommand}" ToolTip="{DynamicResource LOCSaveManagerImportBackupTooltip}">
                            <StackPanel Orientation="Horizontal">
