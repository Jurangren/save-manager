                                                            <DataTrigger Binding="{Binding Path, Converter={x:Static local:PathValidationConverter.Instance}}" Value="False">
                                                                <Setter Property="Foreground" Value="#FF6B6B"/>
                                                                <Setter Property="Opacity" Value="1.0"/>
                                                                <Setter Property="ToolTip" Value="{DynamicResource LOCSaveManagerPathWarning}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
