                            </StackPanel>
                        </Button>
                        <Button Command="{Binding CreateBackupCommand}" 
                                IsEnabled="{Binding HasSavePaths}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerCreateBackup}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- å¤‡ä»½åˆ—è¡¨ -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource NormalBorderBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <ListBox x:Name="BackupsListBox"
                                 ItemsSource="{Binding Backups}" 
                                 SelectionMode="Extended"
                                 SelectionChanged="BackupsListBox_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource NormalBorderBrush}" 
                                            BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                                       Text="{Binding DisplayName}" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLatest}" Value="True">
                                                                <Setter Property="Foreground" Value="#5DADE2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding FormattedSize}" 
                                                       Opacity="0.7" FontSize="11"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                       Text="{Binding FormattedDate}" 
                                                       FontSize="11" Opacity="0.6"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
