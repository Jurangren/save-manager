                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <TextBlock Text="{DynamicResource LOCSaveManagerNoSavePaths}" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   TextAlignment="Center"
                                                                   Foreground="#FF6B6B"
                                                                   Margin="20"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                    </Border>

                    <!-- è¿˜åŽŸæŽ’é™¤é¡¹ï¼ˆå¯æŠ˜å ï¼‰ -->
                    <Border Grid.Row="3" BorderBrush="{DynamicResource NormalBorderBrush}" 
                            BorderThickness="1" CornerRadius="4" Margin="0,8,0,0"
                            Background="{DynamicResource ControlBackgroundBrush}">
                        <StackPanel>
                            <!-- æŠ˜å æ ‡é¢˜æ  -->
                            <Button Command="{Binding ToggleExcludeExpandedCommand}" 
                                    HorizontalContentAlignment="Stretch"
                                    Background="Transparent" BorderThickness="0" Padding="8,6">
