                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                    </Border>
                    
                    <!-- æ“ä½œæŒ‰é’® -->
                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <!-- ç¬¬ä¸€è¡Œï¼šé‡æ–°ä¸Šä¼  / æ‰“å¼€æ–‡ä»¶å¤¹ -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding ReuploadBackupCommand}" 
                                    IsEnabled="{Binding IsSingleBackupSelected}"
                                    ToolTip="{DynamicResource LOCSaveManagerReuploadTooltip}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â˜ï¸" Margin="0,0,6,0"/>
                                    <TextBlock Text="{DynamicResource LOCSaveManagerReupload}"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding OpenBackupFolderCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‚" Margin="0,0,6,0"/>
                                    <TextBlock Text="{DynamicResource LOCSaveManagerOpenBackupFolder}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- ç¬¬äºŒè¡Œï¼šå¼ºåˆ¶è¿˜åŽŸ / è¿˜åŽŸ / å¤‡æ³¨ / åˆ é™¤ -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
