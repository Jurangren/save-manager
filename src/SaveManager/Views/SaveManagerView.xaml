                                    <TextBlock Text="{DynamicResource LOCSaveManagerActionDelete}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
