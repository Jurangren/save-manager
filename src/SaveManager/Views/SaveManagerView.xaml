<UserControl x:Class="SaveManager.Views.SaveManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SaveManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource PopupBackgroundBrush}">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource NormalBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- æ ‡é¢˜æ  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="20" FontWeight="Bold">
                <Run Text="ðŸŽ® "/>
                <Run Text="{Binding GameName, Mode=OneWay}"/>
                <Run Text=" - "/>
                <Run Text="{DynamicResource LOCSaveManagerSubtitle}"/>
            </TextBlock>
            <TextBlock Text="{Binding GameId, StringFormat='ID: {0}'}" 
                       Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- ä¸»è¦å†…å®¹åŒºåŸŸ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- å·¦ä¾§ï¼šå­˜æ¡£è·¯å¾„é…ç½® -->
            <Border Grid.Column="0" Style="{StaticResource SectionBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderText}" Text="{DynamicResource LOCSaveManagerSaveConfigTitle}"/>
                    
                    <!-- æ·»åŠ æŒ‰é’® -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Command="{Binding AddFolderCommand}" ToolTip="{DynamicResource LOCSaveManagerAddFolderTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerAddFolder}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding AddFileCommand}" ToolTip="{DynamicResource LOCSaveManagerAddFileTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“„" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerAddFile}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- è·¯å¾„åˆ—è¡¨ -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource NormalBorderBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <ListBox ItemsSource="{Binding SavePaths}" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding TypeIcon}" 
                                                   FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Path}" FontSize="10" Opacity="0.7" 
                                                       TextTrimming="CharacterEllipsis" ToolTip="{Binding Path}"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2" 
                                                Command="{Binding DataContext.RemovePathCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Content="âœ•" 
                                                ToolTip="{DynamicResource LOCSaveManagerRemoveTooltip}"
                                                Padding="8,4"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Style.Triggers>
                                        <Trigger Property="HasItems" Value="False">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <TextBlock Text="{DynamicResource LOCSaveManagerNoSavePaths}" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   TextAlignment="Center"
                                                                   Opacity="0.5"
                                                                   Margin="20"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                    </Border>
                    
                    <!-- é…ç½®æŒ‰é’® -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Command="{Binding ImportConfigCommand}" Margin="0,0,10,0" ToolTip="{DynamicResource LOCSaveManagerImportConfigTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¥" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerImportConfig}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ExportConfigCommand}" ToolTip="{DynamicResource LOCSaveManagerExportConfigTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¤" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerExportConfig}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- å³ä¾§ï¼šå¤‡ä»½ç®¡ç† -->
            <Border Grid.Column="2" Style="{StaticResource SectionBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderText}" Text="{DynamicResource LOCSaveManagerBackupManagementTitle}"/>
                    
                    <!-- æ“ä½œæŒ‰é’®ï¼ˆç§»åˆ°é¡¶éƒ¨ï¼Œç±»ä¼¼å·¦è¾¹çš„å¸ƒå±€ï¼‰ -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Command="{Binding ImportBackupCommand}" ToolTip="{DynamicResource LOCSaveManagerImportBackupTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¥" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerImportBackup}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding CreateBackupCommand}" 
                                IsEnabled="{Binding HasSavePaths}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerCreateBackup}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- å¤‡ä»½åˆ—è¡¨ -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource NormalBorderBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <ListBox x:Name="BackupsListBox"
                                 ItemsSource="{Binding Backups}" 
                                 SelectionMode="Extended"
                                 SelectionChanged="BackupsListBox_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource NormalBorderBrush}" 
                                            BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                                       Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding FormattedSize}" 
                                                       Opacity="0.7" FontSize="11"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                       Text="{Binding FormattedDate}" 
                                                       FontSize="11" Opacity="0.6"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
                                                       Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       Visibility="{Binding Description, Converter={x:Static local:StringToVisibilityConverter.Instance}}"
                                                       Opacity="0.8" FontStyle="Italic" Margin="0,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Style.Triggers>
                                        <Trigger Property="HasItems" Value="False">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <TextBlock Text="{DynamicResource LOCSaveManagerNoBackups}" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   TextAlignment="Center"
                                                                   Opacity="0.5"
                                                                   Margin="20"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                    </Border>
                    
                    <!-- æ“ä½œæŒ‰é’® -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Command="{Binding EditBackupNoteCommand}" 
                                IsEnabled="{Binding IsSingleBackupSelected}"
                                ToolTip="{DynamicResource LOCSaveManagerActionNoteTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœï¸" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerActionNote}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding RestoreBackupCommand}" 
                                IsEnabled="{Binding IsSingleBackupSelected}"
                                ToolTip="{DynamicResource LOCSaveManagerActionRestoreTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â†©ï¸" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerActionRestore}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DeleteBackupCommand}" 
                                IsEnabled="{Binding IsBackupSelected}"
                                ToolTip="{DynamicResource LOCSaveManagerActionDeleteTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerActionDelete}"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OpenBackupFolderCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‚" Margin="0,0,6,0"/>
                                <TextBlock Text="{DynamicResource LOCSaveManagerOpenBackupFolder}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
