                                    <TextBlock Text="{DynamicResource LOCSaveManagerForceRestore}" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- æ­£å¸¸è¿˜åŽŸ -->
                            <Button Command="{Binding RestoreBackupCommand}" 
                                    IsEnabled="{Binding IsSingleBackupSelected}"
                                    ToolTip="{DynamicResource LOCSaveManagerActionRestoreTooltip}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â†©ï¸" Margin="0,0,6,0"/>
                                    <TextBlock Text="{DynamicResource LOCSaveManagerActionRestore}"/>
